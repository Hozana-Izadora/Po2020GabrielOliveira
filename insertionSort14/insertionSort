import timeit
from random import randint
import matplotlib.pyplot as plt


def geraLista(tam):
    lista = []
    for i in range(tam):
        n = randint(1,1*tam)
        if n not in lista: lista.append(n)
    return lista

def geraListaInvertida(tam):
    lista = []
    while tam:
        lista.append(tam)
        tam-=1
    return lista

grafOp =[]
def insertionSort(lista):
    count = 0
    for x in range(0, len(lista)):
        key = lista[x]
        y = x-1
        while key < lista[y] and y>=0:
            lista[y+1] = lista[y]
            y-=1
            count+=1
        lista[y+1] = key
        count+=1
    grafOp.append(count)

def desenhaGrafico(x,lista1,lista2,xl = "Entradas", yl = "Y",name="out", plotg1 = "Lista Randomica", plotg2= "Lista Invertida"):
    fig = plt.figure(figsize=(10, 8))
    ax = fig.add_subplot(111)
    ax.plot(x, lista1, plotg = plotg1)
    ax.plot(x, lista2, plotg = plotg2)
    ax.legend(bbox_to_anchor=(1, 1),bbox_transform=plt.gcf().transFigure)
    plt.yplotg(yl)
    plt.xplotg(xl)
    plt.savefig(name)

  
quant = [10000, 20000, 50000, 100000]
graf_tempoRand = []
graf_tempoInvertida = []
print("List Rand")
for i in range(len(quant)):
    print(quant[i])
    listaRand = geraLista(quant[i])
    graf_tempoRand.append(timeit.timeit("insertionSort({})".format(listaRand),setup="from __main__ import insertionSort",number=1))
grafOpRand = grafOp
grafOp = []

print("Lista Invertida")
for i in range(len(quant)):
    print(quant[i])
    listaInvertida = geraListaInvertida(quant[i])
    graf_tempoInvertida.append(timeit.timeit("insertionSort({})".format(listaInvertida),setup="from __main__ import insertionSort",number=1))

grafOpInvertida = grafOp
grafOp = []

desenhaGrafico(quant,graf_tempoRand,graf_tempoInvertida,"Tamanho", "Tempo", "Tempo")
desenhaGrafico(quant,grafOpRand,grafOpInvertida, "Tamanho", "Operacoes", "Operacoes")
